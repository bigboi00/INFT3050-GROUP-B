@model INFT3050.Models.Product

@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Stock
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
